<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ALL">
    <Appenders>

        <RollingFile name="AccessRollingFile" fileName="${sys:catalina.home}/logs/urlShortster/access/urlShortster_access.log"
                     filePattern="${sys:catalina.home}/logs/urlShortster/access/$${date:yyyy}/$${date:MM}/urlShortster_access_%d{dd}.log"
                     append="false">
            <PatternLayout>
                <Pattern>%d [%t] - %p - %c - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <LevelRangeFilter minLevel="INFO" maxLevel="INFO"/>
        </RollingFile>

        <RollingFile name="ErrorRollingFile" fileName="${sys:catalina.home}/logs/urlShortster/error/urlShortster_error.log"
                     filePattern="${sys:catalina.home}/logs/urlShortster/error/$${date:yyyy}/$${date:MM}/urlShortster_error_%d{dd}.log"
                     append="false">
            <PatternLayout>
                <Pattern>%d [%t] - %p - %c - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>

        <RollingFile name="DebugRollingFile" fileName="${sys:catalina.home}/logs/urlShortster/debug/urlShortster_debug.log"
                     filePattern="${sys:catalina.home}/logs/urlShortster/debug/$${date:yyyy}/$${date:MM}/urlShortster_debug_%d{dd}.log"
                     append="false">
            <PatternLayout>
                <Pattern>%d [%t] - %p - %c - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
        </RollingFile>

    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="AccessRollingFile"/>
            <AppenderRef ref="ErrorRollingFile"/>
        </Root>

        <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
           <AppenderRef ref="DebugRollingFile"/>
        </Logger>
    </Loggers>
</Configuration>
